<o-articlepreview class="js-fadingBlock">
    <section class="u-articlePreview-wrapper">
        <div class="o-articlePreview { opts.background }">
            <div class="u-articlePreview__content">
                <h1 class="c-articlePreview__h1 localized">{ opts.title }</h1>
                <c-button-secondary cta={ opts.cta } link={ opts.link }></c-button-secondary>
            </div>
            <div class="c-articlePreview__mask"></div>
        </div>
    </section>
</o-articlepreview>